                    <p>{{ menus.prix }}</p>
                    <p> <!-- Button trigger modal -->
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#example{{ menus.id }}">
                            Acheter
                        </button></p>
                </div><!-- /.col-lg-3 -->
            {% block modalPizzaSenior %}
                {% include "modal/modalPizzaSenior.html.twig" %}
            {% endblock %}
            {% endfor %}<br>

        </div><!-- /.row -->






    </div>


{% endblock %}
