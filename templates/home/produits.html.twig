{% extends 'base.html.twig' %}

{% block title %}Commander{% endblock %}

{% block body %}

    <div class="container">

        <!-- Three columns of text below the carousel -->
        <div class="row mt-1">
            {% for menus in menu %}
                <div class="col-lg-3 text-center border border-dark">
                    <img class="bd-placeholder-img rounded-circle" src="https://t3.ftcdn.net/jpg/00/68/11/32/360_F_68113270_UtqNBAgsLTe3XUlFduuKhfs4SZdn0ZpL.jpg" width="140" height="140"  role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false">
